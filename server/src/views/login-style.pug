style(type='text/css').
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #eee;
  }
  .header {
    text-align: center
  }
  .header h1 {
    font-size: 2.5em;
    padding-top: 20px;
  }
  .form-signin {
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
  }

  @media (max-height: 400px) {
    body {
      padding-top: 5px;
      padding-bottom: 5px;
    }
    .header h1 {
      padding-top: 5px;
      font-size: 1.5em;
      margin-bottom: 0px;
    }
    .header img {
      width: 20%;
      height: 20%;
    }
    .form-signin {
      padding-top: 5px;  
    }
  }
  
  .form-signin .form-signin-heading, .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin-heading {
    font-size:1.5em;
  }
  .form-signin .checkbox {
    font-weight: normal;
  }
  .form-signin .form-control {
    position: relative;
    height: auto;
    -webkit-box-sizing: border-box;
       -moz-box-sizing: border-box;
            box-sizing: border-box;
    padding: 10px;
    font-size: 16px;
  }
  .form-signin .form-control:focus {
    z-index: 2;
  }
  #input-password, #button-eye, #button-eye-slash {
    margin-bottom: 10px;
    /* width: calc(100% - 40px); */
  }
